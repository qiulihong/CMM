{% extends '::layout.html.twig' %}

{% block body %}
	<div class="column span-20" id="index_content" style="">
		{% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
			<div id="no_logged_in_info" >
				<div class="column span-13">
				<h2 style="color:#CCC;">什么是“臭美的我”??</h2>
				<span>分享穿衣风格，获取荣誉勋章！年轻人的时尚社区。</span>
				<p style="padding:0;margin:0;">3秒钟轻松注册，分享你得臭美心得。</p>
				</div>
				<div style="clear:both;height:0;line-height:0;">&nbsp;</div>
			</div>
		{% endif %}
		<div id="latest_looks" class="">
			<ul class="looks">
				{% for looks in latestLooks %}
					<li style="margin-bottom: 90px;">
						<div class="container">
							<div class="looks_img column" style="">
								<a href="" onMouseOver="$(this).siblings('.on_layer').show();"><img src="{{ looks.url }}" /></a>
								<div class="outfit_image_click">
									<a href=""><span class="zoom">&nbsp;</span>点击看大图</a>
								</div>
								<div id="on_layer_{{ looks.id }}" class="on_layer" style="color:#0f0;" onmouseout="$(this).hide();"">
									{% set tagIndex = 0 %}
									{% for tag in looks.tags%}
									{% set tagIndex = tagIndex+1 %}
										<span class="on_marker_wrapper" id="tag_mark" rel="{{ tagIndex }}" style="position:absolute;top:{{ tag.position|fetchY }}px;left:{{ tag.position|fetchX }}px;display:block;" onmouseover="$(this).css('background-color', '#f00')" onmouseout="$(this).css('background-color', '#fff')">
											<span class="on_marker">{{ tagIndex }}</span>
										</span>
									{% endfor %}
								</div>
							</div>
							<div class="looks_wrapper column last span-11-5" style="">
								<div class="looks_wrapper_head" class="span-11-5" style="">
									<div class="looks_wrapper_subhead" >
										<div class="column span-2 vote_block" >
											<span class="vote_count">50</span>
											<span class="vote_action" rel="looks_{{ looks.getId() }}">{{ 'choumei.looks.vote'|trans({}, 'ChoumeiLooksBundle') }}</span>
										</div>
										<div class="column span-8 last" id="">
											<div class="column"><img src="{{ looks.user.avatar }}" class="avatar" /></div>
											<div class="column">
												<h3>{{ looks.title }}</h3>
												<div>
													<span>{{ looks.user }}</span>
													<span>{{ looks.getCreatedAt().date|date('d/m/Y') }}</span>
												</div>
											</div>
										</div>
										<div class="clear" style="height:0;line-height:0;">&nbsp;</div>
									</div>
								</div>
								<div class="looks_actions">Head Actions</div>
								<div class="looks_tags">
									<ul>
										{% set tagIndex = 0 %}
										{% for tag in looks.tags%}
										{% set tagIndex = tagIndex+1 %}
										<li class="tag_detail" rel="{{ tagIndex }}" looks="{{ looks.id }}">
											<span class="column number">{{ tagIndex }}</span>
											<span class="column">{{ tag.clothType }} - {{ tag.brand }}</span> 
										</li>
										{% endfor %}
										</ul>
								</div>
							</div>
						</div>
					</li>
					<div class=""></div>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="column span-9 last" id="side_bar" style="">
		<div class="twtr-bd">
			<div style=""  class="twtr-timeline">
				<div class="twtr-tweets" >
				</div>
			</div>
			<div class="twtr-fade"></div>
		</div>
	</div><!-- end side bar-->
	<script src="{{ asset('/bundles/choumeilooks/js/vote.js') }}" type="text/javascript"></script>
{% endblock %}